    <title>Booking Confirmation</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7f6;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }
      .container {
        max-width: 800px;
        width: 100%;
        border-radius: 10px;
        border: 1px solid #08661d;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
      }
      header {
        background-color: #08661d;
        color: #ffffff;
        padding: 10px;
        text-align: center;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: relative;
      }
      .logo {
        position: absolute;
        top: 10px;
        left: 10px;
        width: 50px; /* Adjust the width of your logo */
        height: auto; /* Maintain aspect ratio */
      }
      .content {
        text-align: left;
        background-color: #ffffff;
        padding: 30px;
        margin-top: -10px;
      }
      h1 {
        font-size: 1.7rem;
        font-weight: 800;
        color: #f8fcf9;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif  ;
        margin-bottom: 20px;
      }
      .details {
        font-size: 0.9rem;
        color: #333;
        margin-bottom: 20px;
        font-family: Arial, Helvetica, sans-serif;
      }
      .note {
        font-size: 0.9rem;
        color: #555;
        margin-top: 20px;
      }
      footer {
        background-color: #08661d;
        color: #ffffff;
        padding: 10px;
        text-align: center;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
      }
      .importantText {
        font-weight: 400;
        color: #5b83f1;
      }
      .detaileNameText {
        font-weight: 200;
        color: #000105;
        font-family: 'Times New Roman', Times, serif;
      }
      .detailInfoText {
        font-weight: 200;
        color: #525457;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        text-align: right;
      }
      .detailItem {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
      }
